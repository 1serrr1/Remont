<Page x:Class="Remont.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Remont.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Административная панель" FontSize="18" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20"/>
            <Button Content="Добавить заявку" Width="200" Height="50" Click="NavigateToAddRequestPage"/>
            <Button Content="Список заявок" Width="200" Height="50" Click="NavigateToRequestListPage"/>
        </StackPanel>
    </Grid>
</Page>
